# Application Settings
APP_NAME=CORS Vulnerability Demo
APP_ENV=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Session Configuration
SESSION_SECRET_KEY=your-secret-key-here-change-in-production
SESSION_EXPIRE_MINUTES=60

# CORS Configuration
# Comma-separated list of allowed origins for secure endpoints
SECURE_ALLOWED_ORIGINS=http://localhost:3000,https://trusted.com

# Attack Script Configuration
ATTACK_RATE_LIMIT=5
ATTACK_TIMEOUT_SECONDS=60

# Default Test Accounts (for demonstration purposes only)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_USER_USERNAME=user
DEFAULT_USER_PASSWORD=user123
DEFAULT_VICTIM_USERNAME=victim
DEFAULT_VICTIM_PASSWORD=victim123

# Browser Automation (Selenium)
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Warnings
SHOW_ATTACK_WARNINGS=true
EDUCATIONAL_MODE=true
